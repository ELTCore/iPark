<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ucsd.cse110fa16.group14.ipark.LoginPage"
    android:screenOrientation="portrait"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:windowSoftInputMode="adjustResize|stateHidden" >

    <EditText
        android:ems="10"
        android:layout_marginTop="106dp"
        android:id="@+id/userName"
        android:background="@drawable/lighter_border"
        android:inputType="textPersonName"
        android:hint="Username"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_marginStart="12dp"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@drawable/lighter_border"
        android:id="@+id/password"
        android:hint="Password"
        android:layout_below="@+id/userName"
        android:layout_alignStart="@+id/userName"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp" />

    <CheckBox
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2"
        android:text="Remember me"
        android:layout_width="wrap_content"
        tools:ignore="HardcodedText"
        android:layout_above="@+id/password"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/help"
        android:background="@mipmap/help" />

    <Button
        android:text="BACK"
        android:layout_width="150dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        tools:ignore="HardcodedText"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true" />

    <Button
        android:text="LOGIN"
        android:layout_width="150dp"
        android:textSize ="20sp"
        android:layout_height="wrap_content"
        android:id="@+id/loginButton"
        tools:ignore="HardcodedText"
        android:layout_alignBaseline="@+id/back"
        android:layout_alignBottom="@+id/back"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Forgot password?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgotPass"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/password"
        android:layout_alignEnd="@+id/checkBox2"
        android:textColor="@android:color/holo_blue_dark" />

</RelativeLayout>

