<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ucsd.cse110fa16.group14.ipark.LoginPage">

    <EditText
        android:ems="10"
        android:layout_marginTop="106dp"
        android:id="@+id/userName"
        android:background="@drawable/lighter_border"
        android:inputType="textPersonName"
        android:hint="Username"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="false"
        android:layout_marginStart="12dp"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:background="@drawable/lighter_border"
        android:id="@+id/password"
        android:hint="Password"
        android:layout_below="@+id/userName"
        android:layout_alignStart="@+id/userName"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp" />

    <CheckBox
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/password"
        android:text="Remember me"
        android:layout_width="150dp"
        tools:ignore="HardcodedText" />

    <Button
        android:text="REGISTER"
        android:layout_width="150dp"
        android:textSize ="20sp"
        android:layout_height="wrap_content"
        android:id="@+id/registerButton"
        android:layout_alignBaseline="@+id/loginButton"
        android:layout_alignBottom="@+id/loginButton"
        android:layout_toEndOf="@+id/loginButton"
        android:layout_marginStart="31dp"
        tools:ignore="HardcodedText" />

    <Button
        android:text="LOGIN"
        android:layout_width="150dp"
        android:textSize ="20sp"
        android:layout_height="wrap_content"
        android:id="@+id/loginButton"
        android:layout_marginTop="46dp"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2" />

    <CheckBox
        android:text="Forget password?"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        tools:ignore="HardcodedText"
        android:layout_below="@+id/password"
        android:layout_toEndOf="@+id/checkBox2"
        android:layout_width="200dp" />

    <CheckBox
        android:layout_height="wrap_content"
        android:id="@+id/checkBox3"
        android:text="Admin"
        tools:ignore="HardcodedText"
        android:layout_width="80dp"
        android:layout_alignBaseline="@+id/userName"
        android:layout_alignBottom="@+id/userName"
        android:layout_alignParentEnd="true" />

</RelativeLayout>