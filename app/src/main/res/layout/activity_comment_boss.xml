<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ucsd.cse110fa16.group14.ipark.CommentBoss">


    <ListView
        android:id="@+id/list_view2"
        android:layout_width="350dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_height="370dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radioGroup"
        >

    </RadioGroup>

    <RadioButton
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton7"
        android:layout_marginStart="25dp"
        android:layout_alignBaseline="@+id/button26"
        android:layout_alignBottom="@+id/button26"
        android:layout_toEndOf="@+id/button26" />

    <Button
        android:text="Sorted By"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button26"
        android:layout_below="@+id/radioGroup"
        android:layout_alignStart="@+id/list_view2"
        android:layout_marginTop="11dp" />

    <RadioButton
        android:text="Length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_alignTop="@+id/radioButton7"
        android:layout_toEndOf="@+id/radioButton7"
        android:layout_marginStart="22dp"
        android:id="@+id/radioButton8" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/next"
        android:background="#FFFFFF"
        android:layout_marginStart="39dp"
        android:id="@+id/nextBB"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/radioButton8"
        android:layout_marginBottom="10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/home"
        android:background="#FFFFFF"
        android:layout_marginEnd="12dp"
        android:id="@+id/homeBB"
        android:layout_alignTop="@+id/nextBB"
        android:layout_alignEnd="@+id/button26" />


</RelativeLayout>
