<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_comment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ucsd.cse110fa16.group14.ipark.comment">

    <TextView
        android:text="Your comment won't be seen by anyone except xx parking company"
        android:layout_width="match_parent"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="#000000"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:inputType="text|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine|textEmailAddress|textEmailSubject|textPersonName|textPostalAddress"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:id="@+id/editText10"
        android:background="@drawable/my_border"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="10dp"
        android:fadingEdge="horizontal"
        android:gravity="top|fill_horizontal"
        android:textColor="#202020"
        tools:ignore="HardcodedText,LabelFor"
        android:hint="Your opinion matters..." />

    <Button
        android:text="SUBMIT"
        android:layout_height="100dp"
        android:layout_below="@+id/editText10"
        android:layout_alignParentStart="true"
        android:id="@+id/submitButton"
        android:layout_width="180dp"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:ignore="HardcodedText" />

    <Button
        android:text="CANCEL"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_below="@+id/editText10"
        android:layout_toEndOf="@+id/submitButton"
        android:id="@+id/cancelButton"
        android:textSize="24sp"
        android:textAlignment="center"
        tools:ignore="HardcodedText" />

</RelativeLayout>
