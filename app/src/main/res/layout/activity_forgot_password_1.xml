<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forgot_password_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ucsd.cse110fa16.group14.ipark.ForgotPassword_1"
    android:animateLayoutChanges="false">

    <EditText
        android:inputType="textPersonName"
        android:text="Forgot your password?"
        android:ems="10"
        android:id="@+id/editText"
        android:clickable="false"
        android:textSize="23sp"
        android:textStyle="normal|bold"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:textColorLink="@android:color/holo_blue_light"
        android:contextClickable="false"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:inputType="textMultiLine"
        android:text="In order to receive your access code by email, please provide the email that you used during registration process."
        android:ems="10"
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true"
        android:layout_height="85dp"
        android:clickable="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="103dp"
        android:id="@+id/editText6"
        android:editable="false"
        android:background="@drawable/lighter_border"
        android:layout_below="@+id/editText5"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:ems="10"
        android:id="@+id/editText7"
        android:inputType="text"
        android:clickable="false"
        android:layout_marginBottom="29dp"
        android:layout_alignBottom="@+id/editText6"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/editText7"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_height="wrap_content"
        android:text="Back to login"
        android:ems="10"
        android:id="@+id/editText8"
        android:inputType="text"
        android:layout_width="120dp"
        android:textColor="@android:color/background_dark"
        android:textAllCaps="false"
        android:layout_below="@+id/button9"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
