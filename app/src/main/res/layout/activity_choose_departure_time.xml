<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_departure_time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ucsd.cse110fa16.group14.ipark.ChooseDepartureTimeActivity">

    <Button
        android:text="Home"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        android:textAlignment="center"
        android:textColor="#404040"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        tools:ignore="HardcodedText"
        android:textAllCaps="false" />

    <Button
        android:text="Help "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button4"
        android:textAllCaps="false"
        android:textColor="#404040"
        android:textSize="18sp" />

    <TextView
        android:text="DEPARTURE TIME"
        android:layout_width="match_parent"
        android:id="@+id/textView9"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        tools:ignore="HardcodedText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="NEXT"
        android:id="@+id/next"
        android:layout_height="75dp"
        android:textSize="18sp"
        android:layout_width="160dp"
        android:textAlignment="center"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        tools:ignore="HardcodedText"
        android:onClick="showDialog"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="PREVIOUS"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:id="@+id/previous"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <TextView
        android:text=":"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView52"
        android:textSize="40sp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/min"
        android:layout_marginRight="5dp" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/min"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hour"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/textView52"
        android:layout_marginRight="5dp" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amPM"
        android:layout_marginStart="22dp"
        android:layout_alignBaseline="@+id/min"
        android:layout_alignBottom="@+id/min"
        android:layout_toEndOf="@+id/min" />

</RelativeLayout>
