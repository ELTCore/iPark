<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_map_directional"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ucsd.cse110fa16.group14.ipark.MapDirectional">

    <ucsd.cse110fa16.group14.ipark.UserMapInteractive
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/editText" />

    <Button
        android:text="Report"
        android:id="@+id/send"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignParentEnd="true"
        android:layout_height="50dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_alignEnd="@+id/editText"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/imageView4"
        android:textAllCaps="false" />

    <EditText
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="  Enter illegal parking #"
        android:background="@drawable/lighter_border"
        android:layout_height="45dp"
        android:layout_above="@+id/button14"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:layout_width="230dp" />

    <Button
        android:text="EMERGENCY"
        android:id="@+id/button9"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:background="#990000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_width="150dp" />

    <Button
        android:text="HOME"
        android:id="@+id/button14"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:background="#4F17E9"
        android:layout_width="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
