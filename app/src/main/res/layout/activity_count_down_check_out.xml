<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_count_down_check_out"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ucsd.cse110fa16.group14.ipark.CountDownCheckOut">

    <TextView
        android:text="Time Remaining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/TimeRemainingTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        android:textAlignment="center" />

    <TextView
        android:text="03:50:03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TimeRemainingTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/Timer"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="80dp"
        android:textAlignment="center" />

    <ProgressBar
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Timer"
        android:layout_centerHorizontal="true"
        android:id="@+id/ProgressBar"
        android:max="@android:integer/config_longAnimTime"
        android:progress="@android:integer/config_shortAnimTime"
        android:progressTint="?attr/actionModeSplitBackground" />

    <TextView
        android:text="12:21 PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProgressBar"
        android:layout_alignParentStart="true"
        android:id="@+id/StartTime"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:text="6:00 PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProgressBar"
        android:layout_alignParentEnd="true"
        android:id="@+id/EndTime"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EndTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/Status"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <TextView
        android:text="Parking Spot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ParkingSpot"
        android:layout_below="@+id/Status"
        android:layout_toEndOf="@+id/StartTime"
        android:layout_marginStart="26dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Time Elapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/ParkingSpot"
        android:id="@+id/TimeElapse"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/ParkingSpot" />

    <TextView
        android:text="Parking Rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TimeElapse"
        android:layout_alignEnd="@+id/TimeElapse"
        android:id="@+id/ParkingRate"
        android:layout_marginTop="5dp" />

    <TextView
        android:text="85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TimeElapse"
        android:layout_toEndOf="@+id/ParkingSpot"
        android:layout_marginStart="19dp"
        android:id="@+id/ParkingSpotInfo"
        android:layout_below="@+id/Status"
        android:layout_marginTop="0dp"
        android:layout_alignTop="@+id/ParkingSpot" />

    <TextView
        android:text="01:40:57"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/TimeElapse"
        android:layout_alignStart="@+id/ParkingSpotInfo"
        android:id="@+id/TimeElapseInfo"
        android:layout_below="@+id/ParkingSpotInfo"
        android:layout_marginTop="0dp" />

    <TextView
        android:text="$2.50/hr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ParkingRate"
        android:layout_alignStart="@+id/TimeElapseInfo"
        android:id="@+id/ParkingRateInfo" />

    <Button
        android:text="CheckOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ParkingRate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:id="@+id/CheckoutButton" />

    <Button
        android:text="Request More Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CheckoutButton"
        android:layout_marginTop="17dp"
        android:id="@+id/MoreTimeButton"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="MAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ParkingRate"
        android:layout_centerHorizontal="true"
        android:id="@+id/mapButton" />

</RelativeLayout>
