<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_count_down_check_out"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ucsd.cse110fa16.group14.ipark.CountDownCheckOut">

    <TextView
        android:text="Time Remaining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/TimeRemainingTitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        android:textAlignment="center" />

    <TextView
        android:text="03:50:03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TimeRemainingTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/Timer"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="80dp"
        android:textAlignment="center" />

    <ProgressBar
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Timer"
        android:layout_centerHorizontal="true"
        android:id="@+id/ProgressBar"
        android:max="@android:integer/config_longAnimTime"
        android:progress="@android:integer/config_shortAnimTime"
        android:progressTint="?attr/actionModeSplitBackground" />

    <TextView
        android:text="12:21 PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProgressBar"
        android:layout_alignParentStart="true"
        android:id="@+id/StartTime"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:text="6:00 PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ProgressBar"
        android:layout_alignParentEnd="true"
        android:id="@+id/EndTime"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:text="CheckOut"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="66dp" />

    <Button
        android:text="EMERGENCY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MoreTimeButton"
        android:layout_centerInParent="false"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true" />

    <Button
        android:text="REPORT"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_toEndOf="@+id/button6" />

    <TextView
        android:text="PARKING NUMBER"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/StartTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/textView25"
        android:textColor="#404040"
        android:textSize="25sp"
        android:textAlignment="center" />

    <TextView
        android:text="#170"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/textView25"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:id="@+id/textView26"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textAlignment="center" />

    <TextView
        android:text="map"
        android:layout_width="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="33dp"
        android:id="@+id/textView27"
        android:layout_height="30dp"
        android:textColor="#404040"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_below="@+id/textView26" />

    <View
        android:layout_width="60dp"
        android:layout_height="1dp"
        android:background="#202020"
        android:id="@+id/view1"
        android:layout_below="@+id/textView27"
        android:layout_alignStart="@+id/textView27" />

</RelativeLayout>
